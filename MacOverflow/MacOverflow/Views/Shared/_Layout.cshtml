
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MacOverflow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" style="color: white;">Mac Overflow</a>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav">
                    <li class="@(ViewBag.Current == "Home" ? "nav-link active" : "nav-link") ">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                    </li>
                    <li class="@(ViewBag.Current == "Question" ? "nav-link active" : "nav-link") ">
                        <a class="nav-link" asp-action="Index" asp-controller="Question">Search Questions</a>
                    </li>
                    <li class="@(ViewBag.Current == "Profile" ? "nav-link active" : "nav-link") ">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown">
                            Your Profile
                        </a>
                        <div class="dropdown-menu" style="margin-left: 370px">
                            <a class="dropdown-item" asp-action="Index" asp-controller="Topic">My Topics</a>
                            <a class="dropdown-item" asp-action="Index" asp-controller="MyQuestion">My Questions</a>
                            <a class="dropdown-item" asp-action="Index" asp-controller="Account">Manage Profile</a>
                        </div>
                    </li>
                    @if (User.Identity.Name == "admin")
                    {
                        <li class="@(ViewBag.Current == "Admin" ? "nav-link active" : "nav-link") ">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown">
                                Admin
                            </a>
                            <div class="dropdown-menu" style="margin-left: 475px">
                                <a class="dropdown-item" asp-action="Index" asp-controller="QuestionsAdmin">Questions Admin</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="ResponsesAdmin">Responses Admin</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <div style="margin-left: 15px">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
